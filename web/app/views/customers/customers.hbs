{{>sidebar}}
{{>header}}
{{>token}}

<div class="wrapper">
    <a href="/customers/create" class="button create-customer-button">Create Customer</a>

    <button onclick="deleteSelectedCustomers()" type="submit">Delete</button>
    <div class="customers table">
        <table>
            <thead>
                <tr>
                    <th>
                        <label class="checkbox">
                            <input  type="checkbox" onchange="checkAllBoxes(this)"> 
                        </label>
                    </th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Amount Due</th>
                    <th>Created On</th>
                </tr>
            </thead>
            <tbody>
                {{#each customers}}
                    <tr>
                        <td>
                            <label class="checkbox">
                                <input  type="checkbox" class="customer-checkbox box-checkbox" data-id="{{_id}}"> 
                            </label>
                        </td>
                        <td><a class="link" href="/customers/edit/{{_id}}">{{personal_information.first_name}} {{personal_information.last_name}}</a></td>
                        <td>{{personal_information.email}}</td>
                        <td>placeholder</td>
                        <td>{{created_on}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        <div class="pagination">
            {{#if (gt currentPage 1)}}
            <a href="?page={{subtract currentPage 1}}">Previous</a>
            {{/if}}
            {{#if (lt currentPage totalPages)}}
            <a href="?page={{add currentPage 1}}">Next</a>
            {{/if}}
        </div>
    </div>
</div>