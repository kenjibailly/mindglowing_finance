    <form action="/settings/account" method="post" enctype="multipart/form-data">

        <div class="separate">

            <!-- Picture Input -->
            <label onclick="triggerInput()" for="picture">Profile Picture:</label>
            {{#if user.picture}}
                <img onclick="triggerInput()" class="previewImage" src="/uploads/resized/{{user.picture}}" width="200px" alt="">
            {{else}}
                <img onclick="triggerInput()" class="previewImage" src="/images/placeholder.webp" width="200px" alt="">
            {{/if}}
            <input class="hidden" type="file" id="picture" name="picture" onchange="previewImage(event)">


            {{!-- Date Format Input --}}
            <label for="date_format">Select Date Format:</label>
            <select name="date_format" id="date_format" required>
                <option {{#eq user.date_format 'en-GB'}}selected="selected"{{/eq}} value="en-GB">DD/MM/YYYY</option>
                <option {{#eq user.date_format 'en-US'}}selected="selected"{{/eq}} value="en-US">MM/DD/YYYY</option>
                <option {{#eq user.date_format 'zh-Hans-CN'}}selected="selected"{{/eq}} value="zh-Hans-CN">YYYY/MM/DD</option>
            </select>

