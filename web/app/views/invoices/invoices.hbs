{{>sidebar}}
{{>header}}
{{>token}}

<div class="wrapper">
    <a href="/invoices/create" class="link create-invoice-button">Create Invoice</a>

    <button onclick="deleteSelectedInvoices()" type="submit">Delete</button>
    <div class="invoices table">
        <table>
            <thead>
                <tr>
                    <th>
                        <label class="checkbox">
                            <input  type="checkbox" onchange="checkAllBoxes(this)"> 
                        </label>
                    </th>                    
                    <th>Customer</th>
                    <th>Number</th>
                    <th>Created on</th>
                    <th>Amount Due</th>
                    <th>Total Amount</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                {{#each (reverse invoices) }}
                    <tr>
                        <td>
                            <label class="checkbox">
                                <input  type="checkbox" class="invoice-checkbox box-checkbox" data-id="{{_id}}"> 
                            </label>
                        </td>
                        <td>{{first_name}} {{last_name}}</td>
                        <td><a class="link" href="/invoices/edit/{{_id}}">{{../customization_settings.invoice_prefix}}{{../customization_settings.invoice_separator}}{{number}}</a></td>
                        <td>{{created_on}}</td>
                        <td>{{../user.currency_symbol}} {{amount_due}}</td>
                        <td>{{../user.currency_symbol}} {{amount_total}}</td>
                        <td>{{status}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        <div class="pagination">
            {{#if (gt currentPage 1)}}
            <a href="?page={{subtract currentPage 1}}">Previous</a>
            {{/if}}
            {{#if (lt currentPage totalPages)}}
            <a href="?page={{add currentPage 1}}">Next</a>
            {{/if}}
        </div>
    </div>
</div>